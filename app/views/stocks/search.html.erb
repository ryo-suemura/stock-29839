<div class="wrapper">
  <div class= "header-bar">
    <%= render "header_bar" %>
  </div>
  <div class="main-bar">
    <div class="stock-content">
      <div class="stock-name">
        <h1>商品在庫一覧</h1>
      </div>
      <div class="stock-search">
        <%= form_with  url: search_stocks_path, local: true, method: :get, class: "search-form" do |form|  %>
          <%= form.text_field :keyword, placeholder: "在庫を検索する", class: "search-input" %>
          <%= form.submit "検索", class: "search-btn" %>
        <% end %>
      </div>
      <table>
        <thead class="table-head">
          <tr>
            <th>商品番号</th>
            <th>商品名</th>
            <th>著者</th>
            <th>個数</th>
            <th>種類</th>
            <th>ジャンル</th>
            <th>出版社</th>
            <th class="select"></th>
            <th class="select"></th>
            <th class="select"></th>
          </tr>
        </thead>
         <%= render "item" %>
        </table>
    </div>
  </div>
</div>