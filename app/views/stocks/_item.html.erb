
<% @stocks.each do |stock| %>
            <tbody class="table-body">
              <tr>
                <td><%= stock.number %></td>
                <td><%= stock.name %></td>
                <td><%= stock.author %></td>
                <td><%= stock.stock %></td>
                <td><%= stock.genre.name %></td>
                <td><%= stock.code.name %></td>
                <td><%= stock.publisher.name %></td>
                <td class="select-btn"><%= link_to '編集', '', class: "btn" %></td> 
                <td class="select-btn"><%= link_to '購入', new_stock_purchase_path(stock.id), class:"btn" %></td> 
                <td class="select-btn"><%= link_to '発注', new_stock_order_path(stock.id), class:"btn" %></td> 
              </tr>
            </tbody>
          <% end %>