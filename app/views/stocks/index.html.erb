<div class="wrapper">
  <div class= "header-bar">
    <%= render "header_bar" %>
  </div>
  <div class="main-bar">
    <div class="stock-content">
      <div class="stock-name">
        <h1>在庫一覧</h1>
      </div>
      <div class="stock-search">
        <%= form_with url: search_stocks_path, local: true, method: :get, class: "search-form" do |form|  %>
          <%= form.text_field :keyword, placeholder: "在庫を検索する", class: "search-input" %>
          <%= form.submit "検索", class: "search-btn" %>
        <% end %>
      </div>
      <table>
        <thead class="table-head">
          <tr>
            <th><%= sort_link(@q, :number, "商品番号", class: "sort-btn") %></th>
            <th><%= sort_link(@q, :name, "商品名", class: "sort-btn") %></th>
            <th><%= sort_link(@q, :author, "著者", class: "sort-btn") %></th>
            <th><%= sort_link(@q, :stock, "個数", class: "sort-btn") %></th>
            <th><%= sort_link(@q, :genre_id, "種類", class: "sort-btn") %></th>
            <th><%= sort_link(@q, :code_id, "ジャンル", class: "sort-btn") %></th>
            <th><%= sort_link(@q, :publisher_id, "出版社", class: "sort-btn") %></th>
            <th class="select"></th>
            <th class="select"></th>
            <th class="select"></th>
          </tr>
        </thead>
          <%= render "item" %>
        </table>
    </div>
  </div>
</div>